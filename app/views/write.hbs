<div class="animated fadeIn">
    <form action="/write" method="post">
        <div class="form-group">
          <input id="subject" type="text" class="form-control" name="subject" placeholder="Subject" required>
        </div>
        <div class="form-group">
            <input id="email" type="email" class="form-control" name="email" placeholder="Email" required>
        </div>

        <div class="form-group">
            <textarea class="form-control" name="text" id="text" rows="15"  placeholder="Message..." required></textarea>
        </div>

      <button id="submit" type="submit" class="btn btn-primary">Senden</button>
    </form>
</div>

<script src="/public/lib/tinymce/tinymce.min.js"></script>
<script src="/public/js/write.js"></script>
